<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="Database_Project.StarsChart"
        Title="StarsChart" Height="600" Width="600">
    <Grid>

        <chartingToolkit:Chart HorizontalAlignment="Left" Title="Avg Stars Per Category from Searched" VerticalAlignment="Top" Width="600" Height="600">
            <chartingToolkit:ColumnSeries Title="Average Stars" DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}"/>
        </chartingToolkit:Chart>

    </Grid>
</Window>
