<Window x:Class="Database_Project.TipsTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TipsTable" Height="600" Width="600">
    <Grid>
        <DataGrid x:Name="tipsGrid" Width="600" Height="600">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=user}" ClipboardContentBinding="{x:Null}" Header="User's Name"/>
                <DataGridTextColumn Binding="{Binding Path=date}" ClipboardContentBinding="{x:Null}" Header="Date of Tip"/>
                <DataGridTextColumn Binding="{Binding Path=numLikes}" ClipboardContentBinding="{x:Null}" Header="#ofLikes"/>
                <DataGridTextColumn Binding="{Binding Path=text}" ClipboardContentBinding="{x:Null}" Header="Text"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
